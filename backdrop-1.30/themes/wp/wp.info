name = WordPress Theme Wrapper
description = Wrapper theme for running WordPress themes on Backdrop CMS. Currently configured for Twenty Seventeen.
type = theme
backdrop = 1.x
version = 1.0.0

; Theme settings
settings[toggle_logo] = 1
settings[toggle_name] = 1
settings[toggle_slogan] = 1

; Regions (Twenty Seventeen expects these)
regions[header] = Header
regions[content] = Content
regions[sidebar] = Sidebar
regions[footer] = Footer

; Stylesheets
; Dynamic loading via generated active-theme.css file
; This file is auto-generated by wp_content module based on active_theme config
stylesheets[all][] = active-theme.css

; Scripts
; WordPress theme will handle script enqueuing via wp_head/wp_footer
