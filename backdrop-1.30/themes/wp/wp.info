name = WordPress Theme Wrapper
description = Wrapper theme for running WordPress themes on Backdrop CMS. Currently configured for Twenty Seventeen.
type = theme
backdrop = 1.x
version = 1.0.0

; Theme settings
settings[toggle_logo] = 1
settings[toggle_name] = 1
settings[toggle_slogan] = 1

; Regions (Twenty Seventeen expects these)
regions[header] = Header
regions[content] = Content
regions[sidebar] = Sidebar
regions[footer] = Footer

; Stylesheets
; Dynamic loading via generated active-theme.css file
; This file is auto-generated by wp_content module based on active_theme config
stylesheets[all][] = active-theme.css

; Scripts
; Header class support script
scripts[] = js/header-class.js
; Theme scripts are now loaded dynamically via wp_enqueue_script() in stubs.php
; The following Twenty Seventeen scripts are commented out as fallback - they should
; be loaded via wp_enqueue_script() in the theme's functions.php, but kept here in
; case dynamic loading isn't working properly yet.
; scripts[] = wp-content/themes/twentyseventeen/assets/js/skip-link-focus-fix.js
; scripts[] = wp-content/themes/twentyseventeen/assets/js/navigation.js
; scripts[] = wp-content/themes/twentyseventeen/assets/js/global.js
; scripts[] = wp-content/themes/twentyseventeen/assets/js/jquery.scrollTo.js
