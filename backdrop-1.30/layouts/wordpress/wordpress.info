type = layout
name = WordPress (Generic)
description = Generic layout for ANY WordPress theme. Runs the theme's actual template files (index.php, single.php, etc.) exactly as WordPress does.
version = BACKDROP_VERSION
backdrop = 1.x

; Single region - WordPress themes control their own structure
regions[page] = WordPress Page

; The default region automatically receives the "Main Content" block if needed.
default region = page

; Minimal CSS - themes provide their own styling
stylesheets[all][] = wordpress.css

; Preview (optional - can add later)
; preview = wordpress.png
